/* 一个文件，一件事 模块化 */
.button {
  display: inline-block;
  margin: 8rpx;
  background-color: #e0e1e2;
  padding: 20rpx 48rpx;
  font-weight: bold;
  border-radius: 25rpx;
  font-size: 32rpx;
  transition: 0.3s all;
}

.button.primary {
  background-color: #000;
  color: rgba(255, 255, 255, 0.9);
}

.button-hover {
  opacity: 0.75;
}